{
  "manifest_version": 2,

  "name": "Wax-Off",
  "description": "This extension allows users to block their site for productive reasons .",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "chromeapp.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  }
}